<Window x:Class="CoolingObserverWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoolingObserverWPF"
        mc:Ignorable="d"
        FontFamily="JetBrains Mono"
        Title="CoolSysObserver"
        Height="950"
        Width="1280">

    <Grid Background="#111111">
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto"
                      Padding="10">
            <Grid Margin="0,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- HEADER -->
                <TextBlock Text="Cooling Sys Observer"
                           Grid.Row="0"
                           FontSize="24"
                           Foreground="White"/>

                <!-- STATUS DISPLAY -->
                <TextBlock Text="COOLING SYSTEM STATUS"
                           Grid.Row="1"
                           FontSize="10"
                           Margin="0,0,0,0"
                           Foreground="White"/>
                <Border BorderBrush="White"
                        Margin="0,0,0,10"
                        Grid.Row="2"
                        BorderThickness="1"
                        Padding="10"
                        CornerRadius="0">
                    <Grid Margin="0,10,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- FAN ROTOR IMAGE -->
                        <Image x:Name="IMG_fan_rotor"
                               Grid.Column="0"
                               Source="Images\fan_rotor.png"
                               Width="159"
                               Height="150"/>

                        <!-- STATUS PANEL -->
                        <Grid x:Name="PNL_connectionStatus"
                              Grid.Column="0">
                            <Rectangle Grid.Column="0"
                                       Width="100"
                                       Height="20"
                                       Fill="Red"
                                       Opacity="1"/>
                            <TextBlock Grid.Column="0"
                                       Width="100"
                                       Height="20"
                                       FontSize="15"
                                       TextAlignment="Center"
                                       Text="OFFLINE"
                                       Foreground="White"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </Grid>

                        <!-- STATUS TEXT-->
                        <StackPanel Grid.Column="1"
                                    Margin="20,0,0,0"
                                    VerticalAlignment="Center">

                            <!-- CONNECTION -->
                            <Grid Margin="0,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Line Grid.Column="0"
                                      X1="0"
                                      Y1="15"
                                      X2="120"
                                      Y2="15"
                                      Stroke="White"
                                      StrokeThickness="1"/>
                                <TextBlock Text="CONNECTION:"
                                           Margin="10,0,0,10"
                                           Grid.Column="1"
                                           Foreground="White"
                                           FontWeight="Thin"
                                           FontSize="20"/>
                                <TextBlock x:Name="TXT_connectionStatus"
                                           Text="NO CONNECTION!"
                                           Margin="10,0,0,10"
                                           Grid.Column="2"
                                           Foreground="Orange"
                                           FontSize="20"
                                           FontWeight="Thin"/>
                            </Grid>

                            <!-- SYSTEM STATUS -->
                            <Grid Margin="20,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Line Grid.Column="0"
                                      X1="0"
                                      Y1="15"
                                      X2="120"
                                      Y2="15"
                                      Stroke="White"
                                      StrokeThickness="1"/>
                                <TextBlock Text="SYSTEM STATUS:"
                                           Margin="10,0,0,10"
                                           Grid.Column="1"
                                           Foreground="White"
                                           FontWeight="Thin"
                                           FontSize="20"/>
                                <TextBlock Text="pending..."
                                           x:Name="TXT_systemStatus"
                                           Margin="10,0,0,10"
                                           Grid.Column="2"
                                           Foreground="Orange"
                                           FontSize="20"
                                           FontWeight="Thin"/>
                            </Grid>

                            <!-- COOLING MODE -->
                            <Grid Grid.Row="1"
                                  Margin="0,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Line Grid.Column="0"
                                      X1="0"
                                      Y1="15"
                                      X2="120"
                                      Y2="15"
                                      Stroke="White"
                                      StrokeThickness="1"/>
                                <TextBlock Text="COOLING MODE:"
                                           Margin="10,0,0,10"
                                           Grid.Column="1"
                                           Foreground="White"
                                           FontWeight="Thin"
                                           FontSize="20"/>
                                <TextBlock x:Name="TXT_sysMode"
                                           Text="pending..."
                                           Margin="10,0,0,10"
                                           Grid.Column="2"
                                           Foreground="Orange"
                                           FontSize="20"
                                           FontWeight="Thin"/>
                            </Grid>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <Button
                                Margin="0,0,0,0"
                                Foreground="White"
                                Background="Transparent"
                                BorderBrush="White"
                                FontSize="20"
                                FontWeight="Thin"
                                Click="BTN_reconnect_Click">
                                RECONNECT CSCU
                            </Button>
                            <Button
                                Margin="0,0,0,0"
                                Foreground="White"
                                Visibility="Collapsed"
                                Background="Transparent"
                                BorderBrush="White"
                                FontSize="20"
                                FontWeight="Thin"
                                Click="BTN_generalPurposeAction_Click">
                                GENERAL PURPOSE ACTION
                            </Button>

                            <!-- PLOTS-->
                            <Grid>
                                <oxy:PlotView Model="{Binding SinModel}"
                                              MinHeight="200"/>
                            </Grid>

                        </StackPanel>
                    </Grid>
                </Border>


                <!-- COOLING CYCLE-->
                <TextBlock Text="COOLING CYCLE"
                           Grid.Row="4"
                           FontSize="10"
                           Margin="0,0,0,0"
                           Foreground="White"/>
                <Border
                    BorderBrush="White"
                    Grid.Row="5"
                    Margin="0,0,0,10"
                    BorderThickness="1"
                    Padding="10"
                    CornerRadius="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- CYCLE LAYOUT -->
                        <Image x:Name="IMG_cooling_cycle"
                               Grid.Column="0"
                               Source="Images\cool_cycle.png"
                               Width="1080"
                               Height="300"/>

                        <!-- RADIATOR TEXT -->
                        <TextBlock x:Name="TXT_radiator"
                                   Margin="10,0,0,10"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="White"
                                   FontSize="16">
                        ---%<LineBreak/>
                        [ECO]<LineBreak/>
                        RADIATOR<LineBreak/>
                            <TextBlock.RenderTransform>
                                <TranslateTransform X="-480"
                                                    Y="48"/>
                            </TextBlock.RenderTransform>
                        </TextBlock>

                        <!-- PUMP1 TEXT -->
                        <TextBlock x:Name="TXT_pump1"
                                   Margin="10,0,0,10"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="White"
                                   FontSize="10">
                        ---%<LineBreak/>
                        PUMP1<LineBreak/>
                            <TextBlock.RenderTransform>
                                <TranslateTransform X="-269"
                                                    Y="62"/>
                            </TextBlock.RenderTransform>
                        </TextBlock>

                        <!-- COOLANT TANK TEXT -->
                        <Grid x:Name="PNL_tss">
                            <Rectangle Grid.Column="0"
                                       Width="130"
                                       Height="20"
                                       Fill="Red"
                                       Opacity="1"/>
                            <TextBlock x:Name="TXT_tss"
                                       Grid.Column="0"
                                       Width="140"
                                       Height="20"
                                       FontSize="15"
                                       TextAlignment="Center"
                                       Text="DISCONNECTED"
                                       Foreground="White"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </Grid>
                        <TextBlock x:Name="TXT_coolant_tank"
                                   Margin="10,0,0,10"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="White"
                                   FontSize="16">
                        ---℃<LineBreak/>
                        COOLANT TANK<LineBreak/>
                            <TextBlock.RenderTransform>
                                <TranslateTransform X="-12"
                                                    Y="110"/>
                            </TextBlock.RenderTransform>
                        </TextBlock>

                        <!-- PUMP2 TEXT -->
                        <TextBlock x:Name="TXT_pump2"
                                   Margin="10,0,0,10"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="White"
                                   FontSize="11">
                        ---%<LineBreak/>
                        PUMP2<LineBreak/>
                            <TextBlock.RenderTransform>
                                <TranslateTransform X="197"
                                                    Y="-48"/>
                            </TextBlock.RenderTransform>
                        </TextBlock>

                        <!-- CPU TEXT -->
                        <TextBlock x:Name="TXT_cpu"
                                   Margin="10,0,0,10"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="White"
                                   FontSize="16">
                        ---℃<LineBreak/>
                        CPU<LineBreak/>
                            <TextBlock.RenderTransform>
                                <TranslateTransform X="432"
                                                    Y="31"/>
                            </TextBlock.RenderTransform>
                        </TextBlock>

                    </Grid>
                </Border>


                <!-- LED CONTROL & TERMINAL  -->
                <Grid Grid.Row="6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- LED STRIP -->
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="LED STRIP CONTROL"
                                   Grid.Row="0"
                                   FontSize="10"
                                   Margin="0,0,0,0"
                                   Foreground="White"/>
                        <Border BorderBrush="White"
                                Margin="0,0,0,10"
                                Grid.Row="1"
                                BorderThickness="1"
                                Padding="10"
                                CornerRadius="0">

                            <Grid>
                                <!-- LED STRIP CONTROL -->
                                <Grid x:Name="GRID_ledStripControl"
                                      Visibility="Hidden">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- LED STRIP IMAGE -->
                                    <Image x:Name="IMG_led_strip"
                                           Grid.Column="0"
                                           Source="Images/led_strip.png"
                                           Width="200"
                                           Height="150"/>

                                    <StackPanel Grid.Column="1"
                                                Margin="20,0,0,0"
                                                VerticalAlignment="Center">

                                        <!-- CURRENT LED MODE -->
                                        <TextBlock x:Name="TXT_ledMode"
                                                   Text="MODE: pending..."
                                                   Foreground="White"
                                                   FontSize="20"
                                                   Margin="0,0,0,5"/>

                                        <!-- SELECT LED MODE -->
                                        <Grid Margin="0,0,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="200"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="SELECT MODE:"
                                                       Grid.Column="0"
                                                       Margin="0,0,10,0"
                                                       VerticalAlignment="Center"
                                                       Foreground="White"
                                                       FontSize="16"/>
                                            <ComboBox x:Name="CB_ledModeSelect"
                                                      Grid.Column="1"
                                                      Height="30"
                                                      HorizontalAlignment="Stretch"/>
                                        </Grid>


                                        <!-- GREEN LED TOGGLE BUTTON -->
                                        <Grid Margin="0,0,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="200"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="TOGGLE TEST LED:"
                                                       Grid.Column="0"
                                                       Margin="0,0,0,10"
                                                       TextAlignment="Left"
                                                       VerticalAlignment="Center"
                                                       Foreground="White"
                                                       FontSize="16"/>
                                            <ToggleButton x:Name="Toggle_greenLED"
                                                          Grid.Column="1"
                                                          Height="30"
                                                          HorizontalAlignment="Stretch"
                                                          VerticalAlignment="Top"
                                                          Checked="Toggle_greenLED_Checked"
                                                          Unchecked="Toggle_greenLED_Unchecked">
                                                <ToggleButton.Style>
                                                    <Style TargetType="ToggleButton">
                                                        <Setter Property="Background"
                                                                Value="LightGray"/>
                                                        <Setter Property="Foreground"
                                                                Value="Black"/>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsChecked"
                                                                     Value="True">
                                                                <Setter Property="Background"
                                                                        Value="Green"/>
                                                                <Setter Property="Foreground"
                                                                        Value="Black"/>
                                                                <Setter Property="Content"
                                                                        Value="LED on"/>

                                                            </Trigger>
                                                            <Trigger Property="IsChecked"
                                                                     Value="False">
                                                                <Setter Property="Background"
                                                                        Value="Black"/>
                                                                <Setter Property="Foreground"
                                                                        Value="Red"/>
                                                                <Setter Property="Content"
                                                                        Value="LED off"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </ToggleButton.Style>
                                            </ToggleButton>

                                        </Grid>

                                        <!-- CHANGE LED MODE -->
                                        <Button x:Name="BTN_updateLedChanges"
                                                Content="APPLY"
                                                Grid.Column="1"
                                                HorizontalAlignment="Stretch"
                                                Background="Transparent"
                                                BorderBrush="White"
                                                Foreground="White"
                                                Height="30"
                                                Click="BTN_applyLedChanges_Click"/>

                                    </StackPanel>
                                </Grid>

                                <!-- LED STRIP CONTROL (DISCONNECTED) -->
                                <TextBlock x:Name="TXT_ledStripDisconnected"
                                           Text="CSCU DISCONNECTED"
                                           Foreground="White"
                                           FontSize="20"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Visibility="Visible"/>
                            </Grid>
                        </Border>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- ADMIN TERMINAL -->
                        <TextBlock Text="ADMIN TERMINAL"
                                   Grid.Row="0"
                                   FontSize="10"
                                   Margin="0,0,0,0"
                                   Foreground="White"/>
                        <Border
                            BorderBrush="White"
                            Margin="0,0,0,10"
                            Grid.Row="1"
                            BorderThickness="1"
                            Padding="0"
                            CornerRadius="0">

                            <!-- TERMINAL -->
                            <Grid Margin="00">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- TERMINAL LOG -->
                                <TextBox x:Name="TerminalOutput"
                                         Grid.Row="0"
                                         VerticalAlignment="Stretch"
                                         Background="#000000"
                                         Foreground="White"
                                         FontSize="14"
                                         IsReadOnly="True"
                                         VerticalScrollBarVisibility="Auto"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         Height="145"
                                         Padding="5"/>

                                <!-- COMMAND LINE -->
                                <TextBox x:Name="TerminalInput"
                                         Grid.Row="1"
                                         Background="#000000"
                                         Foreground="White"
                                         FontSize="14"
                                         Padding="5"
                                         KeyDown="TerminalInput_KeyDown"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
